#!/bin/sh

set -e

# workaround for bug #198522
delete_dir_if_empty() {
	if [ ! -d "$1" ]; then
		return 0;
	fi
	rmdir --ignore-fail-on-non-empty $1;
}

case "$1" in
	purge)
		delete_dir_if_empty /etc/xdg/openbox
		delete_dir_if_empty /etc/xdg
		;;
esac

if [ -x /usr/bin/update-menus ]; then update-menus ; fi

#DEBHELPER#
